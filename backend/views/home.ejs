<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - Family App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding-top: 60px;
      background-color: #f7f9fc;
    }
    .container {
      max-width: 900px;
    }
    .card {
      margin-bottom: 20px;
    }
    .admin-link {
      display: inline-block;
      margin-top: 10px;
    }
    .welcome {
      margin-bottom: 30px;
    }
  </style>
</head>
<body>

  <div class="container">

    <!-- Welcome message -->
    <div class="welcome text-center">
      <h1>Welcome, <%= username %>! ðŸ‘‹</h1>
      <p class="text-muted">Manage your family connections easily</p>
    </div>

    <!-- Admin Section -->
    <% if (isAdmin && adminFamilies.length > 0) { %>
      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="card-title">Admin Dashboard</h4>
          <p class="card-text">You are an admin of the following families. Manage join requests or invite users:</p>

          <ul class="list-group list-group-flush">
            <% adminFamilies.forEach(family => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span><b><%= family.family_name %></b></span>
                <div>
                  <a href="/join-family/<%= family._id %>/requests" class="btn btn-sm btn-primary me-2">View Join Requests</a>
                  <a href="/join-family/<%= family._id %>/invite" class="btn btn-sm btn-success">Invite User</a>
                </div>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    <% } %>

    <!-- User Actions Section -->
    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="card-title">User Actions</h4>
        <p class="card-text">Join a family or view available families:</p>
        <a href="/join-family" class="btn btn-success me-2">Join a Family</a>
        <a href="/create-family" class="btn btn-warning">Create a Family</a>
      </div>
    </div>

    <!-- Other Navigation -->
    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="card-title">Profile & Account</h4>
        <p class="card-text">Manage your profile and account settings:</p>
        <a href="/profile" class="btn btn-info me-2">View Profile</a>
        <a href="/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
